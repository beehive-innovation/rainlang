        "dist",
        "src",
        "docs"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "tsc -b ./tsconfig.cjs.json && tsc -b ./tsconfig.json",
        "prepare": "npm run build && npm run webpack",
        "test": "echo 'there is not test at the moment'",
        "lint": "eslint \"src/**\" \"test/**\"",
        "docgen": "rm -rf ./docs && api-extractor run --local && api-documenter -i ./ -o ./docs",
        "webpack": "webpack --mode development",
        "browser": "browserify dist/esm/index.js -o dist/browser/index.js",
        "babel": "npx babel ./dist/node/ ./dist/node/schema/op.meta.schema.json --out-dir lib"
    },
