{
    "name": "@rainprotocol/rainlang",
    "description": "Rainlang standalone server, that encapsulates Rain Language Serivces (in LSP spec) and compiler for NodeJs and Browser environments",
    "version": "1.1.0",
    "author": "Rain Protocol",
    "license": "CAL-1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/rainprotocol/rainlang.git"
    },
    "keywords": [],
    "bugs": {
        "url": "https://github.com/rainprotocol/rainlang/issues"
    },
    "homepage": "http://rainprotocol.github.io/rainlang/",
    "main": "dist/cjs/node/index.js",
    "module": "dist/cjs/node/index.js",
    "browser": "dist/esm/browser/index.js",
    "files": [
        "dist",
        "src",
        "docs"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "prepare": "npm run build",
        "build": "npm run build-cjs && npm run build-esm",
        "build-esm": "tsc -b ./tsconfig.esm.json",
        "build-cjs": "tsc -b ./tsconfig.json",
        "test": "echo 'there is not test at the moment'",
        "lint": "eslint \"src/**\" \"test/**\"",
        "docgen": "rm -rf ./docs && api-extractor run --local && api-documenter -i ./ -o ./docs"
    },
    "devDependencies": {
        "@microsoft/api-extractor": "^7.33.5",
        "@princjef/api-documenter": "^1.0.2",
        "@types/algebra.js": "^0.2.2",
        "@types/chai": "^4.3.3",
        "@types/mocha": "^10.0.0",
        "@types/node": "^18.13.0",
        "@types/pako": "^2.0.0",
        "@types/prettier": "^2.7.2",
        "@types/string-math": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "chai": "^4.3.6",
        "eslint": "^8.26.0",
        "mocha": "^10.1.0",
        "pako": "^2.1.0",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "ajv": "^8.12.0",
        "algebra.js": "git+https://github.com/rouzwelt/algebra.js",
        "buffer": "^6.0.3",
        "cbor": "^8.1.0",
        "ethers": "^5.7.2",
        "graphql": "^16.6.0",
        "graphql-request": "^5.2.0",
        "prettier": "^2.8.3",
        "prettier-standalone": "^1.3.1-0",
        "string-math": "^1.2.2",
        "vscode-languageserver-protocol": "^3.17.3",
        "vscode-languageserver-textdocument": "^1.0.8",
        "vscode-languageserver-types": "^3.17.3"
    }
}
